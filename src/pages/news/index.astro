---
import PrimaryLayout from '../../layouts/PrimaryLayout.astro';
import NewsCard from '../../components/news/NewsCard.astro';

// News interface
interface News {
  _id: string;
  title: string;
  content: string;
  image: string;
  slug: string;
  author?: {
    nama: string;
    username: string;
  };
  category: string;
  createdAt: string;
  viewCount: number;
}

// Get query parameters
const { searchParams } = Astro.url;
const page = parseInt(searchParams.get('page') || '1');
const category = searchParams.get('category') || '';
const limit = 9;

// Fetch news from API
let newsData: { news: News[], currentPage: number, totalPages: number, totalNews: number } = { 
  news: [], 
  currentPage: 1, 
  totalPages: 1, 
  totalNews: 0 
};
try {
  const queryParams = new URLSearchParams({
    page: page.toString(),
    limit: limit.toString(),
    status: 'published'
  });
  
  if (category) {
    queryParams.append('category', category);
  }
  
  const response = await fetch(`${import.meta.env.PUBLIC_API_URL || 'http://localhost:3000/api'}/news?${queryParams}`);
  if (response.ok) {
    newsData = await response.json();
  }
} catch (error) {
  console.error('Error fetching news:', error);
}

const { news, currentPage, totalPages, totalNews } = newsData;

// Categories for filter
const categories = [
  { value: '', label: 'Semua Kategori' },
  { value: 'umum', label: 'Umum' },
  { value: 'kegiatan', label: 'Kegiatan' },
  { value: 'pengumuman', label: 'Pengumuman' }
];
---

<PrimaryLayout title="Berita - Harum Care Indonesia">
  <main class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="bg-blue-600 text-white py-16">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">Berita & Informasi</h1>
          <p class="text-xl text-blue-100 max-w-2xl mx-auto">
            Dapatkan informasi terbaru seputar kegiatan, pengumuman, dan berita dari Harum Care Indonesia
          </p>
        </div>
      </div>
    </section>

    <!-- Filter Section -->
    <section class="py-8 bg-white border-b">
      <div class="max-w-7xl mx-auto px-4">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
          <div class="flex items-center gap-4">
            <label for="category-filter" class="text-sm font-medium text-gray-700">
              Filter Kategori:
            </label>
            <select 
              id="category-filter" 
              class="border border-gray-300 rounded-md px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
              onchange="window.location.href = this.value ? `/news?category=${this.value}` : '/news'"
            >
              {categories.map((cat) => (
                <option value={cat.value} selected={cat.value === category}>
                  {cat.label}
                </option>
              ))}
            </select>
          </div>
          
          <div class="text-sm text-gray-600">
            Menampilkan {news.length} dari {totalNews} berita
          </div>
        </div>
      </div>
    </section>

    <!-- News Grid -->
    <section class="py-12">
      <div class="max-w-7xl mx-auto px-4">
        {news.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
            {news.map((item) => (
              <NewsCard
                _id={item._id}
                title={item.title}
                content={item.content}
                image={item.image}
                slug={item.slug}
                author={item.author}
                category={item.category}
                createdAt={item.createdAt}
                viewCount={item.viewCount}
              />
            ))}
          </div>
        ) : (
          <div class="text-center py-16">
            <div class="mb-6">
              <img 
                src="/images/empty-image-placeholder.webp" 
                alt="No news" 
                class="w-32 h-32 mx-auto opacity-50"
              />
            </div>
            <h3 class="text-2xl font-semibold text-gray-700 mb-2">Tidak Ada Berita</h3>
            <p class="text-gray-500 mb-6">
              {category ? `Tidak ada berita dalam kategori "${category}"` : 'Belum ada berita yang tersedia'}
            </p>
            {category && (
              <a 
                href="/news" 
                class="inline-block px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
              >
                Lihat Semua Berita
              </a>
            )}
          </div>
        )}

        <!-- Pagination -->
        {totalPages > 1 && (
          <div class="flex justify-center mt-12">
            <nav class="flex items-center gap-2">
              {currentPage > 1 && (
                <a 
                  href={`/news?page=${currentPage - 1}${category ? `&category=${category}` : ''}`}
                  class="px-4 py-2 text-sm border border-gray-300 rounded-md hover:bg-gray-50 transition-colors"
                >
                  Sebelumnya
                </a>
              )}
              
              {Array.from({ length: totalPages }, (_, i) => i + 1).map((pageNum) => (
                <a 
                  href={`/news?page=${pageNum}${category ? `&category=${category}` : ''}`}
                  class={`px-4 py-2 text-sm border rounded-md transition-colors ${
                    pageNum === currentPage 
                      ? 'bg-blue-600 text-white border-blue-600' 
                      : 'border-gray-300 hover:bg-gray-50'
                  }`}
                >
                  {pageNum}
                </a>
              ))}
              
              {currentPage < totalPages && (
                <a 
                  href={`/news?page=${currentPage + 1}${category ? `&category=${category}` : ''}`}
                  class="px-4 py-2 text-sm border border-gray-300 rounded-md hover:bg-gray-50 transition-colors"
                >
                  Selanjutnya
                </a>
              )}
            </nav>
          </div>
        )}
      </div>
    </section>
  </main>
</PrimaryLayout>
