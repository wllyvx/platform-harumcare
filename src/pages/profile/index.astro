---
// Layout untuk halaman profil
import PrimaryLayout from '../../layouts/PrimaryLayout.astro';
---

<PrimaryLayout title="Profil - Harum Care Indonesia">
  <div id="profile-container" class="min-h-screen bg-gray-50">
    <!-- Loading State -->
    <div id="loading-state" class="flex items-center justify-center min-h-screen">
      <div class="text-center">
        <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-500 mx-auto mb-4"></div>
        <p class="text-gray-600">Memuat profil...</p>
      </div>
    </div>

    <!-- Profile Content -->
    <div id="profile-content" class="hidden">
      <!-- Header -->
      <div class="bg-white shadow-sm">
        <div class="container mx-auto px-4 py-4">
          <div class="flex items-center">
            <a href="/" class="mr-4">
              <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
            </a>
            <h1 class="text-xl font-semibold text-gray-800">Profil Saya</h1>
          </div>
        </div>
      </div>

      <!-- Profile Info -->
      <div class="container mx-auto px-4 py-6">
        <!-- User Info Card -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-500/30 p-6 mb-6">
          <div class="flex items-center space-x-4">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h2 id="user-name" class="text-xl font-semibold text-gray-800">Loading...</h2>
              <p id="user-role" class="text-gray-600">Loading...</p>
              <p id="user-email" class="text-sm text-gray-500">Loading...</p>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div id="action-buttons" class="space-y-3">
          <!-- Placeholder untuk tombol aksi -->
        </div>

        <!-- Login Prompt (untuk user yang belum login) -->
        <div id="login-prompt" class="hidden bg-white rounded-lg shadow-sm border border-gray-500/30 p-6">
          <div class="text-center">
            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-800 mb-2">Anda Belum Masuk</h3>
            <p class="text-gray-600 mb-6">Silakan masuk ke akun Anda untuk melihat profil lengkap dan mengakses fitur lainnya.</p>
            <div class="space-y-3">
              <a 
                href="/auth/login" 
                class="w-full bg-blue-500 text-white py-3 px-4 rounded-md hover:bg-blue-600 transition duration-200 font-medium text-center block"
              >
                Masuk ke Akun
              </a>
              <p class="text-sm text-gray-500">
                Belum punya akun? 
                <a href="/auth/signup" class="text-blue-600 hover:text-blue-700 font-medium">Daftar di sini</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Fungsi untuk memeriksa status login
    function checkAuthStatus() {
      const userToken = localStorage.getItem("token");
      const userRole = localStorage.getItem("role");
      const userName = localStorage.getItem("userName");
      const userEmail = localStorage.getItem("userEmail");

      const loadingState = document.querySelector("#loading-state");
      const profileContent = document.querySelector("#profile-content");
      const actionButtons = document.querySelector("#action-buttons");
      const loginPrompt = document.querySelector("#login-prompt");

      if (!loadingState || !profileContent || !actionButtons || !loginPrompt) {
        console.error("Required elements not found");
        return;
      }

      if (userToken) {
        // User sudah login
        loadingState.classList.add("hidden");
        profileContent.classList.remove("hidden");
        loginPrompt.classList.add("hidden");

        // Update user info
        const userNameElement = document.querySelector("#user-name");
        const userRoleElement = document.querySelector("#user-role");
        const userEmailElement = document.querySelector("#user-email");

        if (userNameElement) userNameElement.textContent = userName || "User";
        if (userRoleElement) userRoleElement.textContent = userRole === "admin" ? "Administrator" : "User";
        if (userEmailElement) userEmailElement.textContent = userEmail || "Email tidak tersedia";

        // Tampilkan tombol aksi
        actionButtons.innerHTML = `
          <div class="bg-white rounded-lg shadow-sm border border-gray-500/30 p-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Aksi</h3>
            <div class="space-y-3">
              <a 
                href="/auth/logout" 
                id="logout-btn"
                class="w-full bg-red-500 text-white py-3 px-4 rounded-md hover:bg-red-600 transition duration-200 font-medium text-center block"
              >
                Keluar dari Akun
              </a>
              ${userRole === "admin" ? `
                <a 
                  href="/admin/" 
                  class="w-full bg-blue-500 text-white py-3 px-4 rounded-md hover:bg-blue-600 transition duration-200 font-medium text-center block"
                >
                  Panel Administrator
                </a>
              ` : ""}
            </div>
          </div>
        `;

        // Event listener untuk logout
        const logoutBtn = document.querySelector("#logout-btn");
        if (logoutBtn) {
          logoutBtn.addEventListener("click", (event) => {
            event.preventDefault();
            console.log("Logging out...");
            localStorage.removeItem("token");
            localStorage.removeItem("role");
            localStorage.removeItem("userName");
            localStorage.removeItem("userEmail");
            window.location.href = "/";
          });
        }
      } else {
        // User belum login
        loadingState.classList.add("hidden");
        profileContent.classList.remove("hidden");
        loginPrompt.classList.remove("hidden");

        // Update user info untuk user yang belum login
        const userNameElement = document.querySelector("#user-name");
        const userRoleElement = document.querySelector("#user-role");
        const userEmailElement = document.querySelector("#user-email");

        if (userNameElement) userNameElement.textContent = "Pengunjung";
        if (userRoleElement) userRoleElement.textContent = "Belum masuk ke akun";
        if (userEmailElement) userEmailElement.textContent = "Silakan masuk untuk melihat profil lengkap";

        // Sembunyikan tombol aksi untuk user yang belum login
        actionButtons.innerHTML = "";
      }
    }

    // Event listeners
    document.addEventListener("DOMContentLoaded", () => {
      checkAuthStatus();
    });

    // Listen untuk perubahan localStorage
    window.addEventListener("storage", checkAuthStatus);
  </script>
</PrimaryLayout>
