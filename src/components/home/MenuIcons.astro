---
type MenuItem = {
  href: string;
  label: string;
  iconHtml: string; // SVG atau HTML apapun yang ingin dirender
};

const iconGrid = `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-6 w-6"><path d="M3 6a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1v4a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V6zm0 8a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1v4a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1v-4zm12-8a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1v4a1 1 0 0 1-1 1h-4a1 1 0 0 1-1-1V6zm0 8a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1v4a1 1 0 0 1-1 1h-4a1 1 0 0 1-1-1v-4z"/></svg>`;
const iconNews = `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-6 w-6"><path d="M4 5a2 2 0 0 1 2-2h9a1 1 0 1 1 0 2H6v12a1 1 0 0 1-2 0V5zm4 2h8a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2V7zm2 2v2h6V9h-6zm0 4v2h6v-2h-6z"/></svg>`;
const iconDonate = `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-6 w-6"><path d="M12 21c-4.418 0-8-2.91-8-6.5S7.582 8 12 8s8 2.91 8 6.5S16.418 21 12 21zm0-11c-3.314 0-6 2.239-6 4.5S8.686 19 12 19s6-2.239 6-4.5S15.314 10 12 10zm0-7a3 3 0 0 1 3 3v1h-2V6a1 1 0 1 0-2 0v1H9V6a3 3 0 0 1 3-3z"/></svg>`;

const menus: MenuItem[] = [
  { href: '/campaign', label: 'Mulai Berdonasi', iconHtml: iconDonate },
  { href: '/news', label: 'Baca Berita', iconHtml: iconNews },
  { href: '/home', label: 'Beranda', iconHtml: iconGrid },
  // Tambahkan item baru cukup menambahkan objek di sini
];

const totalSlots = 10;
const placeholderCount = Math.max(0, totalSlots - menus.length);
---
<section class="w-full bg-white">
  <div class="max-w-6xl mx-auto px-4 py-6 md:py-8">
    <div class="grid grid-cols-4 sm:grid-cols-6 md:grid-cols-8 lg:grid-cols-10 gap-3 md:gap-4">
      {menus.map((menu) => (
        <a href={menu.href} class="group flex flex-col justify-center items-center gap-2" aria-label={menu.label}>
          <div class="h-12 w-12 md:h-14 md:w-14 rounded-full bg-blue-600 text-white flex items-center justify-center group-hover:bg-blue-700 transition-colors">
            <div set:html={menu.iconHtml}></div>
          </div>
          <div class="flex flex-col items-center min-h-8">
            <span class="text-xs text-center font-medium md:text-sm">{menu.label}</span>
          </div>
        </a>
      ))}

      {/* Placeholder ikon menu */}
      {Array.from({ length: placeholderCount }).map((_, index) => (
        <div class="flex flex-col items-center gap-2" aria-label={`Menu placeholder ${index + 1}`}>
          <div class="h-12 w-12 md:h-14 md:w-14 rounded-full bg-gray-200 border border-gray-300"></div>
          <span class="h-3 w-10 md:w-12 bg-gray-200 rounded"></span>
        </div>
      ))}
    </div>
  </div>
</section>


