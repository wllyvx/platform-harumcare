---
interface Props {
  _id: string;
  title: string;
  content: string;
  image: string;
  slug: string;
  author?: {
    nama: string;
    username: string;
  };
  category: string;
  createdAt: string;
  viewCount: number;
}

const { 
  _id, 
  title, 
  content, 
  image, 
  slug, 
  author, 
  category, 
  createdAt, 
  viewCount 
} = Astro.props;

// Format tanggal
const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  return date.toLocaleDateString('id-ID', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

// Truncate content untuk preview
const truncateContent = (text: string, maxLength: number = 150) => {
  if (text.length <= maxLength) return text;
  return text.substring(0, maxLength) + '...';
};
---

<article class="news-card-compact group cursor-pointer transition-all duration-300 hover:-translate-y-1 flex-shrink-0">
  <a href={`/news/${slug}`} class="block h-full">
    <div class="bg-white rounded-lg overflow-hidden border border-gray-100 hover:border-gray-200 shadow-sm hover:shadow-md h-full flex flex-col">
      <!-- Image Section -->
      <div class="news-image-container-compact relative overflow-hidden flex-shrink-0">
        <img 
          src={image || "/images/empty-image-placeholder.webp"} 
          alt={title}
          class="w-full h-32 object-cover transition-transform duration-500 group-hover:scale-105"
          onerror="console.error('Failed to load image:', this.src)"
        />
        <div class="absolute top-2 left-2">
          <span class="text-xs bg-white/90 text-gray-700 px-2 py-1 rounded-full font-medium shadow-sm">
            {category}
          </span>
        </div>
      </div>
      
      <!-- Content Section -->
      <div class="news-content-compact p-4 flex flex-col flex-grow">
        <!-- Meta Info -->
        <div class="news-meta-compact flex items-center gap-2 mb-2 flex-shrink-0">
          <div class="author-info-compact flex items-center gap-1.5">
            <img 
              src="/images/icons/user-default.svg" 
              alt="Author" 
              class="w-6 h-6 rounded-full border border-gray-100"
            />
            <div class="flex flex-col">
              <p class="text-xs font-medium text-gray-900">{author?.nama || 'Anonymous'}</p>
              <span class="text-xs text-gray-500">
                {formatDate(createdAt)}
              </span>
            </div>
          </div>
          
          <div class="view-count-compact ml-auto flex items-center gap-1 text-xs text-gray-500">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
            {viewCount}
          </div>
        </div>
        
        <!-- Title -->
        <h3 class="text-sm font-bold text-gray-900 mb-2 leading-tight group-hover:text-blue-600 transition-colors duration-300 line-clamp-2 flex-shrink-0">
          {title}
        </h3>
        
        <!-- Content Preview -->
        <p class="text-xs text-gray-600 mb-2 leading-relaxed line-clamp-3 flex-grow">
          {truncateContent(content, 100)}
        </p>
        
        <!-- Read More Button -->
        <div class="flex items-center justify-between flex-shrink-0">
          <span class="inline-flex items-center gap-1 text-blue-600 group-hover:text-blue-700 font-medium text-xs transition-colors duration-300">
            Baca Selengkapnya
            <svg class="w-3 h-3 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </span>
        </div>
      </div>
    </div>
  </a>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .news-card-compact {
    width: 280px;
    height: 360px;
  }
  
  .news-image-container-compact {
    aspect-ratio: 16/9;
  }
  
  .news-image-container-compact img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  /* Memastikan link tidak memiliki underline default */
  .news-card-compact a {
    text-decoration: none;
    color: inherit;
  }
  
  /* Hover effect untuk seluruh card */
  .news-card-compact:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .news-card-compact {
      width: 240px;
      height: 320px;
    }
  }
</style>