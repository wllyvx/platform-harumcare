---
// CampaignSection.astro
import Card from '../common/Card.astro';

// Props untuk section campaign
interface Props {
  title?: string;
  subtitle?: string;
  campaigns: Array<{
    id: string;
    title: string;
    description: string;
    imageUrl: string;
    targetAmount: number;
    currentAmount: number;
    daysLeft: number;
    donorCount: number;
    organizationName: string;
    organizationLogo: string;
    category: string;
  }>;
  showViewAll?: boolean;
  viewAllLink?: string;
}

const {
  title = "Kampanye Donasi Pilihan",
  subtitle = "Pilih kampanye yang sesuai dengan kepedulian Anda dan mulai berbagi kebaikan",
  campaigns = [],
  showViewAll = true,
  viewAllLink = "/campaigns"
} = Astro.props;

// Fungsi untuk memfilter campaigns agar hanya menampilkan 6 kampanye
const featuredCampaigns = campaigns.slice(0, 6);
---

<section class="campaign-section  relative mt-[-4rem] md:mt-[-6rem] px-4 py-16 z-10">
  <div class="campaign-container max-w-7xl mx-auto">
    <!-- Header Section -->
    <div class="text-center mb-10 md:mb-16">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-gray-800 mb-4">{title}</h2>
      <p class="text-gray-600 max-w-2xl mx-auto">{subtitle}</p>
    </div>

    <!-- Campaign Cards -->
    {featuredCampaigns.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        {featuredCampaigns.map((campaign) => (
          <Card
            title={campaign.title}
            description={campaign.description}
            imageUrl={campaign.imageUrl}
            targetAmount={campaign.targetAmount}
            currentAmount={campaign.currentAmount}
            daysLeft={campaign.daysLeft}
            donorCount={campaign.donorCount}
            organizationName={campaign.organizationName}
            organizationLogo={campaign.organizationLogo}
            category={campaign.category}
          />
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-gray-500">Tidak ada kampanye yang tersedia saat ini.</p>
      </div>
    )}

    <!-- View All Button -->
    {showViewAll && featuredCampaigns.length > 0 && (
      <div class="text-center mt-12">
        <a 
          href={viewAllLink}
          class="inline-block px-8 py-3 text-blue-600 border border-blue-600 rounded-full hover:bg-blue-600 hover:text-white transition-colors duration-300"
        >
          Lihat Semua Kampanye
        </a>
      </div>
    )}
  </div>
</section>

<style>
  .campaign-section {
    background-color: #f9fafb;
    border-radius: 32px 32px 0 0;
    box-shadow: 0 -8px 30px rgba(0, 0, 0, 0.05);
  }

  @media (max-width: 768px) {
    .campaign-section {
      border-radius: 24px 24px 0 0;
    }
  }
</style>